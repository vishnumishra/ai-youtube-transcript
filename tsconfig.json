{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": false,
    "declaration": true,
    "declarationDir": "dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
